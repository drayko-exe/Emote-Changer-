Tab:CreateToggle({
   Name = "Renomear Emotes",
   CurrentValue = false,
   Flag = "EmoteToggle",
   Callback = function(Value)
      if Value then
         pcall(function()
            local emotesFolder = ReplicatedStorage:FindFirstChild("Items") and ReplicatedStorage.Items:FindFirstChild("Emotes")
            if emotesFolder then
                if emotesFolder:FindFirstChild("ZombieStride") then 
                    emotesFolder.ZombieStride.Name = "Robot" 
                end
                if emotesFolder:FindFirstChild("catjam") then 
                    emotesFolder.catjam.Name = "ZombieStride" 
                end
                if emotesFolder:FindFirstChild("Griddy") then emotesFolder.Griddy.Name = "SwagWalk" end
            end
            AdvancedRename("WerewolfHowl", "GoofyStride")
            AdvancedRename("Broom", "BumperKart")
            AdvancedRename("SkateboardStroll", "Nostalgia")
            AdvancedRename("RockinStride", "Stride")
         end)
         Rayfield:Notify({Title = "Emotes", Content = "CatJam -> Zombie e Zombie -> Robot ativos!", Duration = 2})
      else
         pcall(function()
            AdvancedRename("ZombieStride", "catjam")
            AdvancedRename("Robot", "ZombieStride")
            AdvancedRename("SwagWalk", "Griddy")
            AdvancedRename("GoofyStride", "WerewolfHowl")
            AdvancedRename("BumperKart", "Broom")
            AdvancedRename("Nostalgia", "SkateboardStroll")
            AdvancedRename("Stride", "RockinStride")
         end)
         Rayfield:Notify({Title = "Emotes", Content = "Nomes originais restaurados.", Duration = 2})
      end
   end,
})

-- ==========================================
-- LÓGICA GRAVIDADE ZERO (By drayko)
-- ==========================================
local b_antiGrav = Instance.new("BodyForce")

RunService.RenderStepped:Connect(function()
    local char = player.Character
    if gravidadeZeroAtiva and char and char:FindFirstChild("HumanoidRootPart") then
        local hrp = char.HumanoidRootPart
        b_antiGrav.Parent = hrp
        
        local massaTotal = 0
        for _, parte in pairs(char:GetChildren()) do
            if parte:IsA("BasePart") then
                massaTotal = massaTotal + parte:GetMass()
            end
        end
        
        b_antiGrav.Force = Vector3.new(0, massaTotal * workspace.Gravity, 0)
    else
        b_antiGrav.Force = Vector3.new(0, 0, 0)
        b_antiGrav.Parent = nil
    end
end)

