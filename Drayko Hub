        h.Size = Vector3.new(1, 1, 1)
        h.CanCollide = false
        h.Massless = true
        h.Transparency = 1
        local i = Instance.new("Weld", h)
        i.Part0 = h
        i.Part1 = b:WaitForChild("HumanoidRootPart")
