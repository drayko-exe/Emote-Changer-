Tab:CreateSection("Movimentação")

Tab:CreateToggle({
   Name = "Bhop (By drayko)",
   CurrentValue = false,
   Flag = "BhopToggle",
   Callback = function(Value) bhopAtivo = Value end,
})

Tab:CreateSection("Emotes")

Tab:CreateToggle({
   Name = "Renomear Emotes",
   CurrentValue = false,
   Flag = "EmoteToggle",
   Callback = function(Value)
      if Value then
         pcall(function()
            -- Lógica solicitada:
            -- 1. ZombieStride vira Robot
            -- 2. catjam vira ZombieStride
            local emotesFolder = ReplicatedStorage:FindFirstChild("Items") and ReplicatedStorage.Items:FindFirstChild("Emotes")
            
            if emotesFolder then
                -- Primeiro muda o original para Robot
                if emotesFolder:FindFirstChild("ZombieStride") then 
                    emotesFolder.ZombieStride.Name = "Robot" 
                end
                -- Depois muda o catjam para ZombieStride
                if emotesFolder:FindFirstChild("catjam") then 
                    emotesFolder.catjam.Name = "ZombieStride" 
                end
                
                -- Outros
                if emotesFolder:FindFirstChild("Griddy") then emotesFolder.Griddy.Name = "SwagWalk" end
            end
            
            -- Outros via Busca
            AdvancedRename("WerewolfHowl", "GoofyStride")
            AdvancedRename("Broom", "BumperKart")
            AdvancedRename("SkateboardStroll", "Nostalgia")
            AdvancedRename("RockinStride", "Stride")
         end)
         Rayfield:Notify({Title = "Emotes", Content = "CatJam -> Zombie e Zombie -> Robot ativos!", Duration = 2})
      else
         pcall(function()
            -- Restaurando na ordem inversa para evitar conflitos de nomes
            AdvancedRename("ZombieStride", "catjam")
            AdvancedRename("Robot", "ZombieStride")
            
            AdvancedRename("SwagWalk", "Griddy")
            AdvancedRename("GoofyStride", "WerewolfHowl")
            AdvancedRename("BumperKart", "Broom")
            AdvancedRename("Nostalgia", "SkateboardStroll")
            AdvancedRename("Stride", "RockinStride")
         end)
         Rayfield:Notify({Title = "Emotes", Content = "Nomes originais restaurados.", Duration = 2})
      end
   end,
})

-- ==========================================
-- ABA: MAPA, AJUSTES E PLATAFORMAS
-- ==========================================
local MapTab = Window:CreateTab("Mapa", 4483362458)
MapTab:CreateButton({
   Name = "Map Changer Brookhaven",
   Callback = function()
      local character = player.Character or player.CharacterAdded:Wait()
      local root = character:WaitForChild("HumanoidRootPart")
      local MAP_ASSET_ID = 140334759443759
      root.Anchored = true
      root.CFrame = CFrame.new(root.Position.X, 15000, root.Position.Z)
      task.spawn(function()
          local success, objs = pcall(function() return game:GetObjects("rbxassetid://" .. MAP_ASSET_ID) end)
          if success and objs[1] then
              objs[1].Parent = workspace
              task.wait(1)
              local targetPart = objs[1]:FindFirstChildWhichIsA("BasePart", true)
              root.CFrame = targetPart and CFrame.new(targetPart.Position.X, 15000, targetPart.Position.Z) or CFrame.new(0, 15000, 0)
          end
          root.Anchored = false
      end)
   end,
})

