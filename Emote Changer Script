local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "Editor de Emotes",
   LoadingTitle = "Carregando Modificações...",
   LoadingSubtitle = "by drayko", -- Crédito alterado aqui
   ConfigurationSaving = {
      Enabled = false
   }
})

-- ==========================================
-- ABA PRINCIPAL (EMOTES)
-- ==========================================
local Tab = Window:CreateTab("Principal", 4483362458)

Tab:CreateSection("Customização de Nomes")

Tab:CreateToggle({
   Name = "Ativar Nomes Customizados",
   CurrentValue = false,
   Flag = "EmoteToggle",
   Callback = function(Value)
      local Emotes = game:GetService("ReplicatedStorage"):WaitForChild("Items"):WaitForChild("Emotes")
      
      if Value then
         -- ATIVAR: Muda para os nomes que você pediu
         if Emotes:FindFirstChild("WerewolfHowl") then Emotes.WerewolfHowl.Name = "GoofyStride" end
         if Emotes:FindFirstChild("Griddy") then Emotes.Griddy.Name = "BumperKart" end
         if Emotes:FindFirstChild("SkateboardStroll") then Emotes.SkateboardStroll.Name = "Nostalgia" end
         
         Rayfield:Notify({
            Title = "Emotes Ativados",
            Content = "Os nomes foram alterados por drayko!",
            Duration = 3,
            Image = 4483362458,
         })
      else
         -- DESATIVAR: Retorna aos nomes originais do jogo
         if Emotes:FindFirstChild("GoofyStride") then Emotes.GoofyStride.Name = "WerewolfHowl" end
         if Emotes:FindFirstChild("BumperKart") then Emotes.BumperKart.Name = "Griddy" end
         if Emotes:FindFirstChild("Nostalgia") then Emotes.Nostalgia.Name = "SkateboardStroll" end
         
         Rayfield:Notify({
            Title = "Emotes Restaurados",
            Content = "Os nomes voltaram ao padrão original.",
            Duration = 3,
            Image = 4483362458,
         })
      end
   end,
})

-- ==========================================
-- ABA SOCIAL (DISCORD & LINKS)
-- ==========================================
local SocialTab = Window:CreateTab("Social", 4483362458)

SocialTab:CreateSection("Comunidade by drayko")

SocialTab:CreateButton({
   Name = "Copiar Convite do Discord",
   Callback = function()
      setclipboard("https://discord.gg/SEU_CONVITE_AQUI") -- Não esqueça de colocar seu link real!
      Rayfield:Notify({
         Title = "Discord",
         Content = "Link do drayko copiado!",
         Duration = 3
      })
   end,
})

SocialTab:CreateButton({
   Name = "YouTube / Outras Redes",
   Callback = function()
      setclipboard("https://youtube.com/@SEU_CANAL") -- Coloque seu link aqui
      Rayfield:Notify({
         Title = "Redes Sociais",
         Content = "Link copiado com sucesso!",
         Duration = 3
      })
   end,
})

Rayfield:LoadConfiguration()
